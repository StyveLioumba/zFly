<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/micro_petite_marge"
    android:id="@+id/item_artiste">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_taille"
        android:id="@+id/imgArtist"
        app:civ_border_width="1dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pseudoUser"
        android:layout_margin="@dimen/micro_petite_marge"
        android:textSize="@dimen/tres_petite_police"
        android:textAppearance="?android:textAppearanceSmall"
        android:fontFamily="@font/carter_one"
        android:textAlignment="center"
        android:text="@string/pseudo"/>

</LinearLayout>