<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAlbum"
    android:layout_margin="@dimen/micro_petite_marge"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/micro_petite_marge"
    app:cardElevation="@dimen/tres_petite_marge"
    app:cardMaxElevation="@dimen/petite_marge">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgAlbum"
            android:layout_margin="@dimen/micro_petite_marge"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="@dimen/micro_petite_marge">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="@string/app_name"
                android:layout_weight="1"
                android:textColor="@color/colorBtn"
                android:textAppearance="?android:textAppearanceSmall"
                android:fontFamily="@font/comfortaa_bold"
                android:id="@+id/txtAlbum"/>

            <ImageView
                android:layout_width="@dimen/moyenne_taille"
                android:layout_height="match_parent"
                android:tint="@color/colorBtn"
                android:layout_weight="1"
                android:id="@+id/btnPlay"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_play_circle_outline_black_24dp"/>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>