<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade"
    tools:context=".view.activities.MainActivity">
    <ImageView
        android:layout_width="@dimen/moyenne_taille"
        android:layout_height="@dimen/moyenne_taille"
        android:src="@drawable/icon"
        android:id="@+id/img"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_marginStart="@dimen/tres_petite_marge"
        android:layout_marginTop="@dimen/tres_petite_marge"
        android:layout_marginEnd="@dimen/tres_petite_marge"
        android:layout_marginBottom="@dimen/tres_petite_marge"
        android:fontFamily="@font/carter_one"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="@dimen/grande_police"
        android:textAlignment="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="155dp"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:lottie_rawRes="@raw/loading_home"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

</RelativeLayout>