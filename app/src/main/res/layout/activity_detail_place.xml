<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.DetailPlaceActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorToolbar"
        app:titleTextAppearance="?android:textAppearanceSmall"
        app:titleTextColor="@color/colorBlanc"
        android:id="@+id/toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/hyper_large_taille"
                android:layout_margin="@dimen/tres_petite_marge"
                app:cardElevation="@dimen/tres_petite_marge">

                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/viewpager"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tres_petite_marge"
                app:cardElevation="@dimen/tres_petite_marge">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtTitre"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@android:color/black"
                            android:text="@string/app_name"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/tres_petite_marge"
                            android:layout_marginBottom="@dimen/micro_petite_marge"
                            android:layout_marginTop="@dimen/micro_petite_marge"
                            android:fontFamily="@font/comfortaa_bold"/>
                        <TextView
                            android:layout_width="@dimen/tres_large_taille"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textAllCaps="true"
                            android:id="@+id/txtType"
                            android:gravity="end"
                            android:textSize="@dimen/tres_petite_police"
                            android:text="@string/app_name"
                            android:fontFamily="@font/carter_one"
                            android:layout_weight="1"
                            android:padding="@dimen/micro_petite_marge"
                            android:layout_marginBottom="@dimen/grande_marge"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/micro_petite_marge"
                        android:layout_marginTop="@dimen/micro_petite_marge"
                        android:layout_marginStart="@dimen/tres_petite_marge">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="@dimen/tres_petite_taille"
                            android:layout_height="@dimen/tres_petite_taille"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:id="@+id/imgCover"
                            app:lottie_rawRes="@raw/position"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtAdresse"
                            android:gravity="center_vertical"
                            android:layout_margin="@dimen/micro_petite_marge"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@android:color/black"
                            android:text="@string/app_name"
                            android:fontFamily="@font/ubuntu_mono_bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/tres_petite_marge"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtEmail"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@android:color/black"
                            android:text="@string/app_name"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/micro_petite_marge"
                            android:gravity="center_vertical"
                            android:drawablePadding="@dimen/tres_petite_marge"
                            android:drawableStart="@drawable/ic_mail_outline_black_24dp"
                            android:textSize="@dimen/tres_petite_police"
                            android:fontFamily="@font/ubuntu_mono_bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtNum"
                            android:layout_margin="@dimen/micro_petite_marge"
                            android:gravity="center_vertical"
                            android:drawableStart="@drawable/ic_phone_android_black_24dp"
                            android:textSize="@dimen/tres_petite_police"
                            android:drawablePadding="@dimen/tres_petite_marge"
                            android:layout_weight="1"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@android:color/black"
                            android:text="@string/app_name"
                            android:fontFamily="@font/ubuntu_mono_bold"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tres_petite_marge"
                app:cardElevation="@dimen/micro_petite_marge">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/photos"
                            android:layout_marginLeft="@dimen/micro_petite_marge"
                            android:layout_marginRight="@dimen/micro_petite_marge"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:drawableStart="@drawable/ic_camera_alt_black_24dp"
                            android:drawableTint="@color/colorBackFlou"
                            android:drawablePadding="@dimen/tres_petite_marge"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:fontFamily="@font/carter_one"
                            android:layout_marginTop="@dimen/tres_petite_marge"
                            android:layout_marginBottom="@dimen/tres_petite_marge"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_more_vert_black_24dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/menuPhoto"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="@dimen/tres_petite_marge"/>
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/grande_taille"
                        android:id="@+id/recyclePhoto"
                        android:layout_marginStart="@dimen/tres_grande_marge"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tres_petite_marge"
                app:cardElevation="@dimen/micro_petite_marge">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:fontFamily="@font/carter_one"
                        android:layout_margin="@dimen/tres_petite_marge"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem"
                        android:id="@+id/txtDescription"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:fontFamily="@font/comfortaa_light"
                        android:layout_margin="@dimen/tres_petite_marge"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>