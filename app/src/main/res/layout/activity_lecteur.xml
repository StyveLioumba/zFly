<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade_music"
    tools:context=".view.activities.LecteurActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:title="Music"
        app:titleTextAppearance="?android:textAppearance"
        app:titleTextColor="@android:color/white"
        android:background="@android:color/transparent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/line">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/petite_marge"
            android:layout_marginBottom="@dimen/petite_marge"
            android:layout_marginLeft="@dimen/normale_marge"
            android:layout_marginRight="@dimen/normale_marge"
            android:adjustViewBounds="true"
            android:id="@+id/imgCover"
            android:layout_centerInParent="true"
            android:src="@drawable/music_cover"/>
        <ProgressBar
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/line"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/tres_petite_marge">
            <ImageButton
                android:layout_width="@dimen/petite_taille"
                android:layout_height="@dimen/petite_taille"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_reply_black_24dp"
                android:tint="@color/colorBlanc"
                android:layout_marginLeft="@dimen/tres_petite_marge"
                android:layout_marginRight="@dimen/tres_petite_marge"
                android:id="@+id/share"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/tres_petite_marge"
                android:layout_marginRight="@dimen/tres_petite_marge">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNbreEcoute"
                    android:textAppearance="?android:textAppearance"
                    android:text="0"
                    android:textSize="@dimen/tres_petite_police"
                    android:textColor="@color/colorBlanc"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/tres_petite_marge"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                <ImageButton
                    android:layout_width="@dimen/petite_taille"
                    android:layout_height="@dimen/petite_taille"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_headset_black_24dp"
                    android:gravity="center"
                    android:tint="@color/colorBlanc"
                    android:layout_gravity="center"
                    android:id="@+id/ecouter"/>
            </LinearLayout>

            <ImageButton
                android:layout_width="@dimen/petite_taille"
                android:layout_height="@dimen/petite_taille"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_file_download_black_24dp"
                android:tint="@android:color/holo_green_light"
                android:layout_marginLeft="@dimen/tres_petite_marge"
                android:layout_marginRight="@dimen/tres_petite_marge"
                android:id="@+id/download"/>

            <ImageView
                android:layout_width="@dimen/tres_petite_taille"
                android:layout_height="@dimen/tres_petite_taille"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_repeat_black_24dp"
                android:tint="@color/colorBlanc"
                android:layout_marginLeft="@dimen/tres_petite_marge"
                android:layout_marginRight="@dimen/tres_petite_marge"
                android:id="@+id/repeat"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lineM"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtChanson"
                android:text="@string/le_nom_du_morceau"
                android:textSize="@dimen/tres_petite_police"
                android:fontFamily="@font/carter_one"
                android:textAppearance="?android:textAppearanceLarge"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorBlanc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtArtiste"
                android:text="@string/le_nom_du_morceau"
                android:textSize="@dimen/tres_petite_police"
                android:fontFamily="@font/comfortaa"
                android:textAppearance="?android:textAppearance"
                android:textAlignment="center"
                android:textColor="@color/colorBlanc"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tres_petite_marge"
                android:layout_marginBottom="@dimen/tres_petite_marge"
                android:layout_marginRight="@dimen/tres_petite_marge"
                android:layout_marginLeft="@dimen/tres_petite_marge"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/elapsedTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@color/colorBlanc"
                    android:fontFamily="@font/comfortaa"
                    android:layout_margin="@dimen/micro_petite_marge"/>

                <SeekBar
                    android:id="@+id/positionBar"
                    android:layout_width="0dp"
                    android:layout_margin="@dimen/micro_petite_marge"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/remainingTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/micro_petite_marge"
                    android:textColor="@color/colorBlanc"
                    android:fontFamily="@font/comfortaa"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btnPrevious"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/common_google_signin_btn_text_light_default"
                    android:src="@android:drawable/ic_media_previous"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/playBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/tres_petite_marge"
                    app:backgroundTint="@color/c5"
                    app:tint="@color/colorBlanc"
                    android:src="@drawable/ic_play_circle_outline_black_24dp"/>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/common_google_signin_btn_text_light_default"
                    android:src="@android:drawable/ic_media_next"
                    android:id="@+id/btnNext"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lineBottom"
            android:layout_margin="@dimen/petite_marge"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_lock_silent_mode_off"/>
            <SeekBar
                android:id="@+id/volumeBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:progress="50"
                android:layout_weight="1"
                android:max="100"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>