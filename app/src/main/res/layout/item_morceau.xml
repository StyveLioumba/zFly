<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/lineMorceau"
    android:layout_margin="@dimen/micro_petite_marge"
    android:layout_height="@dimen/petite_taille">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/petite_taille"
                android:layout_height="@dimen/petite_taille"
                app:cardCornerRadius="@dimen/tres_petite_marge"
                android:layout_margin="@dimen/micro_petite_marge">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imgAlbum"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="@dimen/micro_petite_marge"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="@string/app_name"
                android:maxLines="1"
                android:textSize="@dimen/petite_police"
                android:textAppearance="?android:textAppearance"
                android:fontFamily="@font/carter_one"
                android:id="@+id/txtTitre"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="@string/app_name"
                android:maxLines="1"
                android:textSize="@dimen/tres_petite_police"
                android:textAppearance="?android:textAppearanceSmall"
                android:fontFamily="@font/ubuntu_mono_bold"
                android:id="@+id/txtArtiste"/>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/tres_grande_taille"
            android:layout_height="match_parent"
            android:tint="@android:color/white"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/tres_petite_marge"
            android:id="@+id/btnPlay"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_play_circle_outline_black_24dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:background="@color/colorPrimaryDark"/>
</LinearLayout>