<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorback">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:title="@string/a_propos"
        app:titleTextColor="@color/colorBlanc"
        app:titleTextAppearance="?android:textAppearanceSmall"
        android:background="@color/colorToolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/micro_petite_marge"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/tres_petite_marge"
                app:cardMaxElevation="@dimen/petite_marge"
                app:cardElevation="@dimen/tres_petite_marge"
                android:layout_margin="@dimen/tres_petite_marge">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/petite_marge"
                        android:layout_marginLeft="@dimen/petite_marge"
                        android:layout_marginTop="@dimen/tres_petite_marge"
                        android:layout_marginBottom="@dimen/tres_petite_marge">
                        <ImageView
                            android:layout_width="@dimen/moyenne_taille"
                            android:layout_height="@dimen/moyenne_taille"
                            android:src="@drawable/icon"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="#zFly"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/carter_one"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Application de music"
                        android:textAppearance="?android:textAppearance"
                        android:fontFamily="@font/ubuntu_mono_bold"
                        android:layout_marginEnd="@dimen/petite_marge"
                        android:layout_marginStart="@dimen/moyenne_marge"
                        android:layout_marginTop="@dimen/tres_petite_marge"
                        android:layout_marginBottom="@dimen/tres_petite_marge"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/petite_marge"
                        android:layout_marginLeft="@dimen/petite_marge"
                        android:layout_marginTop="@dimen/tres_petite_marge"
                        android:layout_marginBottom="@dimen/tres_petite_marge">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/petite_marge"
                            android:layout_marginLeft="@dimen/petite_marge"
                            android:src="@drawable/ic_info"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/tres_petite_marge"
                            android:layout_marginBottom="@dimen/tres_petite_marge">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/version"
                                android:textAppearance="?android:textAppearance"
                                android:textColor="@color/colorTxt"
                                android:fontFamily="@font/comfortaa_light"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/b_ta_1_0"
                                android:textAppearance="?android:textAppearanceLarge"
                                android:textColor="@color/colorTint"
                                android:fontFamily="@font/carter_one"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/_2020"
                        android:fontFamily="@font/carter_one"
                        android:textAppearance="?android:textAppearance"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="textEnd"
                        android:layout_marginRight="@dimen/petite_marge"
                        android:layout_marginLeft="@dimen/petite_marge"
                        android:layout_marginTop="@dimen/tres_petite_marge"
                        android:layout_marginBottom="@dimen/tres_petite_marge"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/tres_petite_marge"
                app:cardMaxElevation="@dimen/petite_marge"
                app:cardElevation="@dimen/tres_petite_marge"
                android:layout_margin="@dimen/tres_petite_marge">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ateur"
                        android:textAppearance="?android:textAppearance"
                        android:textColor="@color/colorTint"
                        android:layout_marginRight="@dimen/petite_marge"
                        android:layout_marginLeft="@dimen/petite_marge"
                        android:layout_marginTop="@dimen/tres_petite_marge"
                        android:layout_marginBottom="@dimen/tres_petite_marge"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/petite_marge"
                        android:layout_marginLeft="@dimen/petite_marge"
                        android:layout_marginTop="@dimen/tres_petite_marge"
                        android:layout_marginBottom="@dimen/tres_petite_marge">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/petite_marge"
                            android:layout_marginLeft="@dimen/petite_marge"
                            android:src="@drawable/ic_person_outline"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/tres_petite_marge"
                            android:layout_marginBottom="@dimen/tres_petite_marge">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/dj_youss"
                                android:textAppearance="?android:textAppearanceLarge"
                                android:textColor="@color/colorTxt"
                                android:textSize="@dimen/police_normale"
                                android:fontFamily="@font/carter_one"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/petite_marge"
                        android:layout_marginLeft="@dimen/petite_marge"
                        android:layout_marginTop="@dimen/tres_petite_marge"
                        android:layout_marginBottom="@dimen/tres_petite_marge">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            app:lottie_rawRes="@raw/dev"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/tres_petite_marge"
                            android:layout_marginLeft="@dimen/tres_petite_marge"
                            android:layout_marginBottom="@dimen/tres_petite_marge">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/d_velopper_par"
                                android:textAppearance="?android:textAppearance"
                                android:textColor="@color/colorTint"
                                android:fontFamily="@font/comfortaa_light"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/essengo_group"
                                android:textAppearance="?android:textAppearanceLarge"
                                android:textColor="@color/colorTxt"
                                android:textSize="@dimen/police_normale"
                                android:fontFamily="@font/comfortaa_bold"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/tres_petite_marge"
                app:cardMaxElevation="@dimen/petite_marge"
                app:cardElevation="@dimen/tres_petite_marge"
                android:layout_margin="@dimen/tres_petite_marge">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nos_contacts"
                        android:textAppearance="?android:textAppearance"
                        android:textColor="@color/colorTint"
                        android:layout_marginRight="@dimen/petite_marge"
                        android:layout_marginLeft="@dimen/petite_marge"
                        android:layout_marginTop="@dimen/tres_petite_marge"
                        android:layout_marginBottom="@dimen/tres_petite_marge"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/petite_marge"
                        android:layout_marginLeft="@dimen/petite_marge"
                        android:layout_marginTop="@dimen/tres_petite_marge"
                        android:layout_marginBottom="@dimen/tres_petite_marge">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            app:lottie_rawRes="@raw/contactus"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/tres_petite_marge"
                            android:layout_marginTop="@dimen/tres_petite_marge"
                            android:layout_marginBottom="@dimen/tres_petite_marge">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/_242_06_6"
                                android:textAppearance="?android:textAppearance"
                                android:textColor="@color/colorTxt"
                                android:fontFamily="@font/carter_one"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/essengogroup_cg_gmail_com"
                                android:textAppearance="?android:textAppearance"
                                android:textColor="@color/colorTxt"
                                android:fontFamily="@font/carter_one"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/colorPrimaryDark"
                android:paddingTop="@dimen/petite_marge"
                android:paddingBottom="@dimen/petite_marge"
                android:layout_marginBottom="@dimen/petite_marge"
                android:layout_marginTop="@dimen/petite_marge"
                android:layout_margin="@dimen/tres_petite_marge"
                android:paddingLeft="@dimen/moyenne_taille"
                android:paddingRight="@dimen/moyenne_taille">
                <ImageView
                    android:layout_width="@dimen/moyenne_marge"
                    android:layout_height="@dimen/moyenne_marge"
                    android:src="@drawable/fb"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="@dimen/moyenne_marge"
                    android:layout_height="@dimen/moyenne_marge"
                    android:src="@drawable/ig"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="@dimen/moyenne_marge"
                    android:layout_height="@dimen/moyenne_marge"
                    android:src="@drawable/twt"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>