<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/line"
            android:layout_margin="@dimen/petite_marge">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="wrap_content"
                    android:layout_height="155dp"
                    android:id="@+id/wlcomImg"
                    android:adjustViewBounds="true"
                    app:lottie_rawRes="@raw/welcome"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bienvenue \ndans FlyZik"
                    android:layout_toRightOf="@id/wlcomImg"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/carter_one"
                    android:textSize="@dimen/grande_police"
                    android:layout_marginStart="@dimen/tres_petite_marge"
                    android:layout_marginBottom="@dimen/grande_marge"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lineEnvoie"
                android:visibility="visible"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/s_inscrire"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/carter_one"
                    android:layout_marginStart="@dimen/tres_petite_marge"
                    android:layout_marginBottom="@dimen/tres_grande_marge"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petite_taille"
                    app:hintTextAppearance="?android:textAppearance"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:textColorHint="@android:color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/nom"
                        android:textAppearance="?android:textAppearance"
                        android:textColor="@android:color/white"
                        android:hint="@string/nom"
                        android:inputType="text"
                        android:maxLines="1"
                        android:drawableStart="@drawable/ic_person_outline"
                        android:drawableTint="@android:color/white"
                        android:drawablePadding="@dimen/tres_petite_marge"
                        android:fontFamily="@font/comfortaa"
                        tools:targetApi="m" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petite_taille"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/tres_petite_marge"
                    android:layout_marginTop="@dimen/tres_petite_marge"
                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccpCode"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        app:ccpDialog_textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:ccp_defaultNameCode="CG"  />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:hintTextAppearance="?android:textAppearance"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:textColorHint="@android:color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/tel"
                            android:textAppearance="?android:textAppearance"
                            android:textColor="@android:color/white"
                            android:hint="@string/num_ro_de_t_l_phone"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:drawableStart="@drawable/ic_phone"
                            android:drawableTint="@android:color/white"
                            android:drawablePadding="@dimen/tres_petite_marge"
                            android:fontFamily="@font/comfortaa"
                            tools:targetApi="m" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petite_taille"
                    android:text="@string/etes_vous_artiste"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:textAppearance"
                    android:fontFamily="@font/comfortaa_light"
                    android:id="@+id/statementArtiste"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/lineBottom"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/petite_taille"
                        app:hintTextAppearance="?android:textAppearance"
                        android:hint="@string/nom_d_artiste"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:textColorHint="@color/colorTxt">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/nomArtiste"
                            android:textAppearance="?android:textAppearance"
                            android:textColor="@color/colorTxt"
                            android:inputType="text"
                            android:maxLines="1"
                            android:drawableStart="@drawable/ic_person_outline"
                            android:drawableTint="@color/colorTint"
                            android:drawablePadding="@dimen/tres_petite_marge"
                            android:fontFamily="@font/comfortaa"
                            tools:targetApi="m" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/petite_taille">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textAppearance="?android:textAppearance"
                            android:fontFamily="@font/comfortaa_light"
                            android:text="@string/quel_genre_etes_vous"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/spinnerArtist"/>
                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petite_taille"
                    app:cardBackgroundColor="@color/colorbtn"
                    app:cardCornerRadius="@dimen/grande_marge"
                    app:cardElevation="@dimen/petite_marge"
                    app:cardMaxElevation="@dimen/normale_marge"
                    android:id="@+id/btnRegister"
                    android:layout_marginLeft="@dimen/tres_petite_marge"
                    android:layout_marginRight="@dimen/tres_petite_marge"
                    android:layout_marginTop="@dimen/moyenne_marge"
                    android:layout_marginBottom="@dimen/moyenne_marge">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/insription"
                            android:textAppearance="?android:textAppearance"
                            android:fontFamily="@font/carter_one"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lineVerification"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CODE \nVERIFICATION"
                    android:textAppearance="?android:textAppearance"
                    android:fontFamily="@font/carter_one"
                    android:gravity="center"
                    android:layout_margin="@dimen/tres_petite_marge"
                    android:textAllCaps="true"
                    android:textSize="@dimen/tres_grande_police"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="un code vous sera envoyé par message"
                    android:layout_margin="@dimen/tres_petite_marge"
                    android:textAppearance="?android:textAppearance"
                    android:fontFamily="@font/carter_one"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"/>

                <com.chaos.view.PinView
                    android:id="@+id/pinView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/PinWidget.PinView"
                    app:itemCount="6"
                    android:gravity="center"
                    app:itemHeight="50dp"
                    app:itemWidth="50dp"
                    android:layout_gravity="center"
                    app:lineColor="@color/colorPrimary"
                    app:lineWidth="1dp"
                    android:textColor="@android:color/black"
                    android:itemBackground="#fff"
                    android:inputType="number"
                    android:cursorVisible="true"
                    app:cursorColor="@android:color/black"
                    app:hideLineWhenFilled="true"
                    app:itemRadius="5dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petite_taille"
                    app:cardBackgroundColor="@color/c5"
                    app:cardCornerRadius="@dimen/grande_marge"
                    app:cardElevation="@dimen/petite_marge"
                    app:cardMaxElevation="@dimen/normale_marge"
                    android:id="@+id/btnVerification"
                    android:layout_marginLeft="@dimen/tres_petite_marge"
                    android:layout_marginRight="@dimen/tres_petite_marge"
                    android:layout_marginTop="@dimen/moyenne_marge"
                    android:layout_marginBottom="@dimen/moyenne_marge">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Verification"
                        android:textAppearance="?android:textAppearance"
                        android:fontFamily="@font/carter_one"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/progress"
        android:visibility="gone"/>
</RelativeLayout>